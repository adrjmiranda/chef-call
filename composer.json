{
	"version": "1.0.0",
	"name": "adrjmiranda/chef-call",
	"description": "ChefCall is a web-based food delivery platform that connects customers to a wide variety of dishes and flavors, directly at their doorstep. The project was developed with a focus on offering an intuitive, fast and reliable experience for both end users and system administrators.",
	"type": "project",
	"license": "MIT",
	"autoload": {
		"psr-4": {
			"App\\Controllers\\Site\\": "app/controllers/site/",
			"App\\Controllers\\Admin\\": "app/controllers/admin/",
			"App\\Core\\": "app/core/",
			"App\\Core\\Helpers\\": "app/core/helpers/",
			"App\\Models\\": "app/models/"
		}
	},
	"authors": [
		{
			"name": "Adriano Miranda",
			"email": "adrjmiranda@gmail.com"
		}
	],
	"require": {
		"respect/validation": "^2.3",
		"stripe/stripe-php": "^16.4",
		"vlucas/phpdotenv": "^5.6",
		"slim/slim": "4.*",
		"slim/psr7": "^1.7",
		"twig/twig": "^3.0",
		"doctrine/orm": "^3.3",
		"doctrine/dbal": "^4.2",
		"symfony/cache": "^7.2",
		"doctrine/migrations": "^3.8"
	},
	"scripts": {
		"dev": "php -S localhost:8000 -t public"
	},
	"config": {
		"process-timeout": 0
	},
	"require-dev": {
		"zeuxisoo/slim-whoops": "^0.7.3",
		"symfony/var-dumper": "^7.2",
		"phpunit/phpunit": "^11.5"
	}
}
